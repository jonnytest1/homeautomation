{
  "root": true,
  "plugins": [
    "unused-imports",
    "eslint-plugin-import",
    "@angular-eslint/eslint-plugin",
    "@typescript-eslint"
  ],
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "jest": true,
    "es6": true
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.js"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates"
      ],
      "rules": {
        "@angular-eslint/no-empty-lifecycle-method": "warn",
        "indent": "off",
        "@typescript-eslint/consistent-type-imports": [
          "error",
          {
            "disallowTypeAnnotations": false
          }
        ],
        "@typescript-eslint/indent": [
          "warn",
          2, //space multiplier for options below (1 below = 2 spaces)
          {
            "MemberExpression": 1,
            "FunctionDeclaration": {
              "body": 1,
              "parameters": "first" //if function parameters wrap they should start at the same position as the first parameter
            },
            "CallExpression": {
              "arguments": "first" //if function arguments wrap they should start at the same position as the first arguments
            },
            "ArrayExpression": 1,
            "ImportDeclaration": 1,
            "SwitchCase": 1
          }
        ],
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "warn",
        "@typescript-eslint/no-empty-function": "warn",
        "no-constant-condition": "off",
        "no-empty": "off",
        "no-undef": "off",
        "unused-imports/no-unused-imports": [
          "warn"
        ]
      }
    }
  ]
}