{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    // "allowSyntheticDefaultImports": true,
    // "isolatedModules": true,
    "rootDir": ".",
    "lib": [
      "ES2020",
      "WebWorker",
      "WebWorker.ImportScripts"
    ],
    "types": [],
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
  },
  "exclude": [
    "**/node_modules/**/*",
    "node_modules/**/*",
    "../../node_modules/**/*",
    "dist"
  ],
  "include": [
    "./*.ts",
    "firebase-messaging-sw.ts"
  ]
}